<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for main image on top of the page. -->
    <style name="MainImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Style for layout with title and subtitle of the place. -->
    <style name="PlaceTitleLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/place_title_layout_padding</item>
    </style>

    <!-- Style for title of the place. -->
    <style name="PlaceTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!-- Style for subtitle of the place. -->
    <style name="PlaceSubtitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/subtitle_margin_top</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <!-- Style for Call/Save/Website TextViews. -->
    <style name="ActionTextView">
        <item name="android:layout_width">@dimen/action_text_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/action_text_view_drawable_padding</item>
        <item name="android:padding">@dimen/action_text_view_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="InformationTextViewLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/information_text_view_layout_padding</item>
    </style>

    <!-- Style for TextViews with information like Phone number, Ownership and etc. -->
    <style name="InformationTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/information_text_view_drawable_padding</item>
        <item name="android:paddingTop">@dimen/information_text_view_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/information_text_view_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/information_text_view_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/information_text_view_horizontal_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Style for layout with additional images. -->
    <style name="AdditionalImagesLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/additional_images_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/additional_images_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/additional_images_layout_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for additional images in Horizontal ScrollView. -->
    <style name="AdditionalImage">
        <item name="android:layout_width">@dimen/additional_image_width</item>
        <item name="android:layout_height">@dimen/additional_image_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">@dimen/additional_image_margin</item>
    </style>
</resources>
